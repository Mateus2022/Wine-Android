<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/image_delete"
        android:visibility="invisible"/>
    <CheckBox
        android:id="@+id/check_box_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ckBoxStyle"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/image_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/check_box_select"
        android:layout_toEndOf="@id/check_box_select"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/text_goods_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_goods"
        android:layout_toEndOf="@id/image_goods"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@id/image_goods"
        android:layout_toEndOf="@id/image_goods"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@id/text_goods_description"/>

    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_goods_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:background="@drawable/rectangle">
        <ImageView
            android:id="@+id/image_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/decrease"/>
        <TextView
            android:id="@+id/text_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:layout_weight="1"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/image_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"/>
    </LinearLayout>


</RelativeLayout>