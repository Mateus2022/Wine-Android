<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>




    <style name="MainTabStyle">
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_main_tab_text_color</item>
    </style>

    <style name="IndexBannerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!--CheckBox样式-->
    <style name="ckBoxStyle">
        <item name="android:button">@drawable/selector_check_box</item>
    </style>
    <!--我的界面按钮样式-->
    <style name="btnMineStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_btn_mine</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TopBar">
        <attr name="topbar_title" format="string|reference"/>
        <attr name="topbar_isShowBackImg" format="boolean"/>
    </declare-styleable>

    <style name="AnimationFade" parent="android:Animation">
        <!--进入时的动画-->
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <!--退出时的动画-->
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>边框
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明   去掉背景色边框也就去掉了 -->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <declare-styleable name="TextRightTextView">
        <attr name="labelText" format="string|reference"/>
        <attr name="dataText" format="string|reference"/>
        <attr name="labelTextColor" format="color|reference"/>
        <attr name="dataTextColor" format="color|reference"/>
        <attr name="labelTextSize" format="dimension|reference"/>
        <attr name="dataTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="ImageTextTextView">
        <attr name="detailImage" format="reference"/>
        <attr name="detaiLabel" format="string|reference"/>
        <attr name="detailData" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="TextTextView">
        <attr name="leftText" format="string|reference"/>
        <attr name="leftTextColor" format="color|reference"/>
        <attr name="leftTextSize" format="dimension|reference"/>
        <attr name="leftTextWidth" format="dimension|reference"/>
        <attr name="rightText" format="string|reference"/>
        <attr name="rightTextColor" format="color|reference"/>
        <attr name="rightTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="TextIndicatorView">
        <attr name="indicatorWidth" format="dimension|reference"/>
        <attr name="indicatorHeight" format="dimension|reference"/>
        <attr name="indicatorColor" format="color|reference"/>
        <attr name="indicatorTextColor" format="color|reference"/>
        <attr name="indicatorText" format="string|reference"/>
        <attr name="isShowIndicator" format="boolean"/>
    </declare-styleable>
</resources>
