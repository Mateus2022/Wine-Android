<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_delivery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_delivery_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/item_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_delivery_name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="#848181"
        android:textSize="13sp"/>

    <View
        android:id="@+id/item_delivery_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/item_delivery_address"
        android:layout_marginTop="10dp"
        android:background="#848181"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_delivery_divider"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">



        <TextView
            android:id="@+id/item_delivery_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:text="删除"
            android:textColor="#848181"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_delivery_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_delivery_delete"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:text="编辑"
            android:textColor="#848181"
            android:textSize="13sp"/>
    </RelativeLayout>
</RelativeLayout>