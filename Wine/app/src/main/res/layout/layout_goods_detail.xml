<?xml version="1.0" encoding="UTF-8"?>
<com.ndboo.widget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/goods_detail_rollpagerview"
            android:layout_width="match_parent"
            android:layout_height="373dp"/>

        <TextView
            android:id="@+id/goods_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/goods_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="3dp"
            android:textColor="#f2302f"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#f00"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/goods_detail_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="#898686"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/LightGray"/>

        <com.ndboo.widget.TextTextView
            android:id="@+id/goods_detail_haschoose"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            app:leftText="产    地"
            app:leftTextSize="13sp"
            app:leftTextWidth="80dp"
            app:rightText="江苏盐城"
            app:rightTextColor="#323232"
            app:rightTextSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1"/>

        <com.ndboo.widget.TextTextView
            android:id="@+id/goods_detail_delivery"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            app:leftText="生产日期"
            app:leftTextSize="13sp"
            app:leftTextWidth="80dp"
            app:rightText="2016-09-10 10:20:10"
            app:rightTextColor="#323232"
            app:rightTextSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="上拉查看详情"
            android:textSize="14sp"/>
    </LinearLayout>
</com.ndboo.widget.MyScrollView>