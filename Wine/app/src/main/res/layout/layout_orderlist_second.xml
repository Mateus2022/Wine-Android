<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/item_myorder_two_info_img"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_myorder_two_info_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="x1"/>

            <TextView
                android:id="@+id/item_myorder_two_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/item_myorder_two_info_count"
                android:ellipsize="end"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:text="沙家浜苏州大米"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_myorder_two_info_perprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="¥10.5元/袋"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_myorder_two_info_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="小计：10.50元"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>