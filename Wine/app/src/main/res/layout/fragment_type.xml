<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/main_tab_type"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <com.ndboo.widget.DropLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drop_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:selectedImg="@mipmap/ic_filter_arrow_up"
        app:textSize="14sp"
        app:unSelectedImg="@mipmap/ic_filter_arrow_down">
        <!--筛选条件-->
        <LinearLayout
            android:id="@+id/layout_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Blue"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--内容-->
            <FrameLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/lvWineType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:dividerHeight="1px"
                        android:scrollbars="none"/>
                    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                        android:id="@+id/refresh_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_stage_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"/>
                    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

                </LinearLayout>

            </FrameLayout>
            <!--筛选条件详细内容-->
            <FrameLayout
                android:id="@+id/layout_filter_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <GridView
                    android:id="@+id/grid_view_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:horizontalSpacing="20dp"
                    android:numColumns="3"
                    android:verticalSpacing="20dp">

                </GridView>
            </FrameLayout>

        </FrameLayout>

    </com.ndboo.widget.DropLayout>

</LinearLayout>
