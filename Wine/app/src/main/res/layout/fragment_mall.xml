<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ndboo.widget.TopBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topbar_isShowBackImg="false"
        app:topbar_title="@string/main_tab_mall"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabSelectedTextColor="@color/mainTabTextColorOn"
        app:tabTextColor="@color/mainTabTextColorNm"/>
    <ListView
        android:id="@+id/list_view_wine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
